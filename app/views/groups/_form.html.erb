<%= form_with(model: group, url: '/categories', method: 'post') do |form| %>
  <% if group.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
        <% group.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field mb-3">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, placeholder: 'name of category' %>
  </div>

  <div class="field mb-3">
    <%= form.label :icon, style: "display: block" %>
    <%= form.text_field :icon, placeholder: 'paste link here' %>
  </div>

  <div class="field mb-3">
    <%= form.submit class: 'brn btn-success text-light p-2' %>
  </div>
<% end %>
