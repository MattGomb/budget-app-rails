<p style="color: green"><%= notice %></p>
<section class="mx-4">
  <div class="d-flex justify-content-between">
    <%= link_to "Back to cateogires", categories_path, class: 'btn btn-secondary mb-3' %>
    <%= button_to 'New expense', new_category_expense_path(@group), method: :get, class: 'btn btn-success text-light mb-3' %>
  </div>
  <div class="d-flex flex-column align-items-center">
    <h3>
      <%= @group.name %>: $<%= @group.total_expenses %>
    </h3>
    <% @expenses.order(created_at: :desc).each do |e| %>
    <div class="container card mb-2">
      <div>
        <div class="mt-2">
          <h5><%= e.name %></h5>
          <p class="mb-0">$ <%= e.amount %></p>
        </div>
        <div>
        <%= %>
        <%= button_to "", category_expense_path(category_id: @group.id, expense_id: e.id), params: {expense_id: e.id}, class:'bi bi-trash3 btn btn-danger', method: :delete %>
        </div>
      </div>
      <div class="d-flex justify-content-end">
        <%= e.created_at.strftime('added at: %d %b %Y | %H:%M') %>
      </div>
    </div>
    <% end %>
    <div class="my-2">
      <!-- <%= link_to "Edit this category", edit_category_path(@group), class: 'btn btn-secondary' %> | -->
      <%= button_to "Delete category", category_path(@group), method: :delete, class: 'btn btn-danger' %>
    </div>
  </div>
</section>
